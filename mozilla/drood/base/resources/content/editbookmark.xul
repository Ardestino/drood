<?xml-stylesheet href="chrome://drood/skin/" type="text/css"?>

<!DOCTYPE dialog [
<!ENTITY % droodDTD SYSTEM "chrome://drood/locale/drood.dtd" >
%droodDTD;
]>

<dialog xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
        id="editbookmark"
        title="Dialog Title"
        minwidth="400"
        buttons="accept,cancel"
        onload="loaded()"
        ondialogaccept="return accepted()"
        ondialogcancel="return canceled()">

  <script type="application/x-javascript"
          src="chrome://drood/content/util.js"/>
  <script type="application/x-javascript"
          src="chrome://drood/content/editbookmark.js"/>

  <grid flex="1">
    <columns>
      <column/>
      <column flex="1"/>
    </columns>
    <rows>
      <row>
        <hbox align="center">
          <label value="&name.label;&colon;"/>
        </hbox>
        <textbox id="bmtitle"
                 flex="1"
                 value=""/>
      </row>
      <row>
        <hbox align="center">
          <label value="URL&colon;"/>
        </hbox>
        <textbox id="bmurl"
                 flex="1"
                 value="http://"/>
      </row>
    </rows>
  </grid>

</dialog>

