<?xml-stylesheet href="chrome://drood/skin/" type="text/css"?>

<!DOCTYPE dialog [
<!ENTITY % droodDTD SYSTEM "chrome://drood/locale/drood.dtd" >
%droodDTD;
]>

<dialog xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
        id="copyproject"
        title="&copyProject.title;"
        buttons="accept,cancel"
        onload="loaded()"
        ondialogaccept="return accepted()"
        ondialogcancel="return canceled()">

  <script type="application/x-javascript"
          src="chrome://drood/content/util.js"/>
  <script type="application/x-javascript"
          src="chrome://drood/content/copyproject.js"/>

  <hbox align="center">
    <label value="&name.label;&colon;"/>
    <textbox id="name-textbox"
             flex="1"
             maxlength="40"
             oninput="validateInput()"/>
  </hbox>
  <spacer height="15"/>
  <hbox align="center">
    <label value="&location.label;&colon;"/>
    <image id="location-image"
           tooltiptext=""
           ondblclick="revealLocation()"/>
    <label id="location-textbox"
           flex="1"/>
    <button label="&browseCmd.label;&ellipsis;"
            oncommand="browse()"/>
  </hbox>

</dialog>
