<xsl:stylesheet version="1.0"
                xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

  <xsl:output method="html"/>

  <xsl:template match="scriptdoc">
    <html>
      <head>
        <title></title>
      </head>
      <body>
        <xsl:apply-templates/>
      </body>
    </html>
  </xsl:template>

  <xsl:template match="scene">
    <div class="scene">
      <xsl:apply-templates/>
    </div>
  </xsl:template>

  <xsl:template match="sceneheading">
    <p class="sceneheading">
      <xsl:apply-templates/>
    </p>
  </xsl:template>

  <xsl:template match="action">
    <p class="action">
      <xsl:apply-templates/>
    </p>
  </xsl:template>

  <xsl:template match="transition">
    <p class="transition">
      <xsl:apply-templates/>
    </p>
  </xsl:template>

  <xsl:template match="shot">
    <p class="shot">
      <xsl:apply-templates/>
    </p>
  </xsl:template>

  <xsl:template match="dialog">
    <p class="dialog">
      <xsl:apply-templates/>
    </p>
  </xsl:template>

  <xsl:template match="character">
    <p class="character">
      <xsl:apply-templates/>
    </p>
  </xsl:template>

  <xsl:template match="paren">
    <p class="parenthetical">
      <xsl:apply-templates/>
    </p>
  </xsl:template>

  <xsl:template match="text">
    <p>
      <xsl:apply-templates/>
    </p>
  </xsl:template>

  <xsl:template match="linebreak">
    <br/>
  </xsl:template>

</xsl:stylesheet>
