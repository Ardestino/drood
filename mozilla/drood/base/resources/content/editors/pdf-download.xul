<?xml-stylesheet href="chrome://drood/skin/" type="text/css"?>

<!DOCTYPE dialog [
#include ../drood-entities.inc
]>

<dialog xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
        id="pdf-download-dialog" 
        title="&pdfDownloadDialog.title;"
        width="275"
        height="300"
        buttons="cancel" 
        onload="loaded()"
        ondialogcancel="canceled()"
        pack="right">

  <script type="application/x-javascript"
          src="chrome://drood/content/editors/pdf-download.js"/>

  <hbox flex="1">

    <image src="chrome://drood/skin/drood.png"/>

    <vbox flex="1">
      <label id="message" value="&downloadingPDF.label;"/>
      <progressmeter id="meter" mode="undetermined"/>
    </vbox>

  </hbox>

</dialog>
