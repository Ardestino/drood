<?xml-stylesheet href="chrome://drood/skin/" type="text/css"?> 

<!DOCTYPE dialog [
<!ENTITY % droodDTD SYSTEM "chrome://drood/locale/drood.dtd" >
%droodDTD;
]>

<dialog xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
        id="import-script-dialog" 
        title="&importScriptCmd.label;"
        buttons="cancel" 
        pack="right"
        ondialogcancel="canceled()"
        onload="loaded()">

#include ../drood-scripts.inc
  <script type="application/x-javascript"
          src="chrome://drood/content/editors/importer.js"/>
  <script type="application/x-javascript"
          src="chrome://drood/content/editors/importdialog.js"/>

  <hbox width="300">

    <vbox flex="1">
      <label id="progress-label" value=""/>
      <progressmeter id="progress-meter" mode="undetermined" value="0"/>
    </vbox>

  </hbox>

  <!-- Zero-size frame for import routine -->
  <iframe id="import-frame" collapsed="true"/>

</dialog>
