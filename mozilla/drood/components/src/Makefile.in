DEPTH		  = ../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		  = @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE = droodcomps
LIBRARY_NAME = droodcomps
EXPORT_LIBRARY = 1
IS_COMPONENT = 1
MODULE_NAME = nsDroodModule
MOZILLA_INTERNAL_API = 1

PACKAGE_FILE = droodcomps.pkg

ifndef MOZ_ENABLE_LIBXUL
EXTRA_DSO_LIBS	= gkgfx
endif
ifdef MOZ_PERF_METRICS
EXTRA_DSO_LIBS	+= mozutil_s
endif

REQUIRES  = xpcom \
            string \
            rdf \
            unicharutil \
            dom \
            html \
            gfx \
            layout \
            widget \
            content \
            locale \
            docshell \
            pref \
            thebes \
            necko \
            $(NULL)

CPPSRCS = \
  DroodRDFUtils.cpp \
  NumberingScheme.cpp \
  droodNodeIterator.cpp \
  nsControlCharStripper.cpp \
  nsScriptPaginator.cpp \
  nsSceneNumberService.cpp \
  nsActTracker.cpp \
	nsSceneTracker.cpp \
	nsShotTracker.cpp \
	nsScriptScene.cpp \
	nsDroodDebugBreaker.cpp \
	nsDroodModule.cpp \
	$(NULL)

ifneq (,$(filter mac cocoa,$(MOZ_WIDGET_TOOLKIT)))
LOCAL_INCLUDES = -I$(topsrcdir)/dom/src/base -I$(topsrcdir)/widget/src/cocoa -I$(topsrcdir)/widget/src/xpwidgets

CMMSRCS = nsCocoaFullScreen.mm
endif

EXTRA_DSO_LDOPTS += $(LIBS_DIR)             \
                    $(EXTRA_DSO_LIBS)       \
                    $(MOZ_UNICHARUTIL_LIBS) \
                    $(MOZ_COMPONENT_LIBS)   \
                    $(MOZ_JS_LIBS)          \
                    $(NULL)

ifdef MOZ_ENABLE_XLIB
EXTRA_DSO_LDOPTS += \
		-lxlibrgb \
		$(NULL)
endif

ifdef NS_TRACE_MALLOC
EXTRA_DSO_LIBS	+= tracemalloc
endif

ifdef MOZ_SVG_RENDERER_LIBART
EXTRA_DSO_LDOPTS += $(MOZ_LIBART_LIBS) \
		    $(NULL)
endif

ifdef MOZ_ENABLE_GTK2
EXTRA_DSO_LDOPTS += $(MOZ_GTK2_LIBS) \
		    $(NULL)
endif

ifneq (,$(MOZ_ENABLE_CANVAS)$(MOZ_SVG_RENDERER_CAIRO))
EXTRA_DSO_LDOPTS += $(MOZ_CAIRO_LIBS) \
		    $(NULL)
endif

ifneq (,$(filter mac cocoa gtk,$(MOZ_WIDGET_TOOLKIT)))
EXTRA_DSO_LDOPTS += \
	$(TK_LIBS) \
	$(NULL)
endif

include $(topsrcdir)/config/config.mk

include $(topsrcdir)/config/rules.mk
